@Library("my_library") _
pipeline {
    agent any
    stages {
        stage('checkout') {
            steps {
                script {
                    echo "Checking out code from Git repository"
                    def config = [
                        url: 'https://github.com/AdidelaHarishReddy/myProject.git',
                        credentialsId: 'git-hub_token',
                        branch: 'main'
                    ]
                    gitcheckout(config)
                    sh '''
                        ls -a
                    '''
                }
            }
        }
        stage('code quality checking') {
        steps {
            script {
                withSonarQubeEnv('sonarserver') {
                    echo "code quality checking the project"
                    sh '''
                    /opt/sonar-scanner/bin/sonar-scanner -Dsonar.projectKey=my_project
                        // sonar-scanner
                        // --sonar-project-key=my_project
                    '''
                }
            }
        }
    }
    }
    
    }
