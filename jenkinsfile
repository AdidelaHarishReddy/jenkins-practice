pipeline{
    agent any
    stages {
        stage('stage1') {
            steps {
                script {
                    echo 'Hello World'
                }
            }
        }
        stage('stage2') {
            steps {
                script {
                     sh ''' 
                     mkdir folder1
                     touch file1
                     echo "this is first data input to file1 by using pipeline" > file1
                    '''                            
                }
            }
        }
    }               
                    
}