pipeline{
    agent none
    stages {
        stage('stage1'){ 
            {agent {label 'slave1'}}
            steps {
                script {
                    echo 'Hello World'
                }
            }
        }
        stage('stage2') {
            {agent {label 'slave2'}} 
            steps {
                script {
                     sh ''' 
                     ls -lrt
                     echo "this is first data input to file1 by using pipeline" > file1
                    '''                            
                }
            }
        }
    }               
                    
}