pipeline {
    agent any 
    environment {
        A = "murali"
    }
    parameters {
        string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
        text(name: 'BIOGRAPHY', defaultValue: '', description: 'Enter some information about the person')
        booleanParam(name: 'TOGGLE', defaultValue: true, description: 'Toggle this value')
        choice(name: 'BRANCH', choices: ['main', 'build', 'production'], description: 'Pick something')
        password(name: 'PASSWORD', defaultValue: 'SECRET', description: 'Enter a password')
    }

    stages {
        stage('CHECKOUT') {  
            steps {
                script {
                    checkout scmGit(
                        branches: [[name: '*/main']],
                        extensions: [],
                        userRemoteConfigs: [[
                            credentialsId: 'github_jenkinspractice',
                            url: 'https://github.com/AdidelaHarishReddy/jenkins-practice.git'
                        ]]
                    )
                }                           
            }
        }
        
        stage('main') { 
            when {
                (return params.BRANCH == 'main') 
            }
            steps {
                script {
                    echo "Hello World ${env.A} ${params.PERSON}"
                    // Avoid printing passwords for security
                }
                sh '''
                    echo "hi $A" 
                '''           
            }   
        }
        
        stage('build') {
            when { return params.BRANCH == 'build' }
            steps {
                script {
                    echo "Hello World it's build"
                }
                sh ''' 
                    echo "this is first $A pipeline"
                '''                            
            }
        }
        
        stage('production') {
            when { return params.BRANCH == 'production' }
            steps {
                script {
                    echo "Hello World it's production"
                }
                sh ''' 
                    echo "this is first $A pipeline"
                '''                            
            }
        }
    }               
}
